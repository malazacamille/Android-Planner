<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bckgrd12">

    <TextView
        android:id="@+id/month1"
        android:layout_width="115dp"
        android:layout_height="56dp"
        android:layout_marginTop="45dp"
        android:fontFamily="@font/rancho"
        android:gravity="center"
        android:text="Jan"
        android:textColor="#333333"
        android:textSize="40dp"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/year1"
        android:layout_width="115dp"
        android:layout_height="40dp"
        android:fontFamily="@font/rancho"
        android:gravity="center"
        android:text="2018"
        android:textColor="#333333"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/month1" />

    <TextView
        android:id="@+id/day1"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rancho"
        android:gravity="center"
        android:text="24"
        android:textColor="#333333"
        android:textSize="80dp"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/year1" />

    <TextView
        android:id="@+id/quotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="90dp"
        android:fontFamily="@font/rancho"
        android:gravity="center|top"
        android:text="The best preparation for tomorrow is doing your best today."
        android:textColor="#333333"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/day1" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottomNavView_Bar"
        android:layout_width="303dp"
        android:layout_height="46dp"
        android:layout_marginBottom="48dp"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/menu_first_calen">


    </android.support.design.widget.BottomNavigationView>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginBottom="96dp"
        android:fontFamily="@font/rancho"
        android:text="  TASK             EVENT        CALENDAR        NOTE              MORE"
        android:textColor="@color/white"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
